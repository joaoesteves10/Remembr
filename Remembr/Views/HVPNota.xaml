<UserControl x:Class="Remembr.Views.HVPNota"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Remembr.Views"
             mc:Ignorable="d" 
                      d:DesignHeight="235" 
         d:DesignWidth="321" 
         Background="White">

    <Border Background="#FFEBEBEB" CornerRadius="15">

        <Grid>

            <Rectangle Grid.Column="4"
                       Stroke="#FF3F3F3F"
                       StrokeThickness="2"
                       RadiusX="6"
                       RadiusY="6"
                       Margin="20 80"/>
            
            <TextBlock Text="Atenção: Se a tarefa for prioritária (nível 400 ou acima), os lembretes não poderão ser desligados"
                   TextWrapping="WrapWithOverflow"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   FontFamily="{StaticResource MentoneLig}"
                   Foreground="#FF3F3F3F"
                       FontSize="16"
                       Padding="10"
                       Margin="10"/>

        </Grid>
    </Border>
</UserControl>
