<UserControl x:Class="Remembr.Views.HomeTarefas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remembr.Views"
        mc:Ignorable="d"
        d:DesignHeight="600" 
        d:DesignWidth="920"
        Background="Transparent"
        >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Fill="White" 
                            Width="170" 
                            Height="55" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            RadiusX="15" 
                            RadiusY="15"
                            />
            <TextBlock x:Name="Logo"
                            Text="REMEMBR."
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="Black"
                            FontSize="30"
                            FontFamily="{StaticResource NEONLEDLight}" />


            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>



            </Grid>
        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="1"
                           Fill="#565656"
                           RadiusX="15"
                           RadiusY="15"
                           Margin="10"
                           Opacity="0.8"/>

            <Grid Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.18*"/>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.16*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.16*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="2"
                               Grid.Row="1"
                               Fill="#89C762"                               
                               RadiusX="10"
                               RadiusY="10"
                               Margin="0 0 5 0"/>

                    <Rectangle Grid.Row="1"
                               Grid.Column="3"
                               Fill="#f16992"                               
                               RadiusX="10"
                               RadiusY="10"
                               Margin="0 0 5 0"/>

                    <Rectangle Grid.Row="1"
                               Grid.Column="4"
                               Fill="#878888"                               
                               RadiusX="10"
                               RadiusY="10"
                               Margin="0 0 0 0"/>

                    <Rectangle Grid.Row="1"
                               Grid.Column="1"
                               Fill="#FEDC85"                               
                               RadiusX="10"
                               RadiusY="10"
                               Margin="0 0 5 0"/>

                    <Grid Grid.Row="1"
                          Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Button Content="POR INICIAR"
                                    x:Name="BotaotarefastI"
                                    Margin="10 10 15 10"
                                    FontFamily="{StaticResource MentoneLig}"
                                    Style="{StaticResource ButtonTarefas}"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch" Click="BotaotarefastI_Click" 
                                    />

                    </Grid>
                    <Grid Grid.Row="1"
                          Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Button Content="EM EXECUÇÃO"
                                    x:Name="BotaotarefastII"
                                    Margin="10 10 15 10"
                                    FontFamily="{StaticResource MentoneLig}"
                                    Style="{StaticResource ButtonTarefas}"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch" Click="BotaotarefastII_Click" 
                                    />

                    </Grid>
                    <Grid Grid.Row="1"
                          Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Button Content="TERMINADAS"
                                    x:Name="BotaotarefastIII"
                                    Margin="10 10 15 10"
                                    FontFamily="{StaticResource MentoneLig}"
                                    Style="{StaticResource ButtonTarefas}"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch" Click="BotaotarefastIII_Click" 
                                    />

                    </Grid>
                    <Grid Grid.Row="1"
                          Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Button Content="APAGADAS"
                                    x:Name="BotaotarefastIV"
                                    Margin="10 10 15 10"
                                    FontFamily="{StaticResource MentoneLig}"
                                    Style="{StaticResource ButtonTarefas}"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch" Click="BotaotarefastIV_Click" 
                                    />

                    </Grid>


                </Grid>

            </Grid>


            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.6*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UserControl Grid.Row="2" x:Name="hcc"/>


                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*"/>
                            <ColumnDefinition Width="5.9*"/>
                            <ColumnDefinition Width="2.1*"/>
                            <ColumnDefinition Width="6.3*"/>
                            <ColumnDefinition Width="1.9*"/>
                            <ColumnDefinition Width="6.3*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="6.5*"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>


                    </Grid>
                </Grid>

            </Grid>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height=".2*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Ellipse Grid.Row="0"
                             Height="100" 
                             Width="100" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Bottom"
                             Stroke="#FF3F3F3F" 
                             StrokeThickness="2"
                             MouseDown="Ellipse_MouseDown"
                         >
                    <Ellipse.Fill>
                        <ImageBrush x:Name="pfp" ImageSource="/Resources/Images/NoPhoto.png"/>
                    </Ellipse.Fill>
                    <Ellipse.Style>
                        <Style TargetType="{x:Type Ellipse}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9">
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                <Button 
                            Grid.Row="1"
                            Content="Nova Tarefa" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="54" 
                            Width="172"
                            FontFamily="{StaticResource MentoneLig}"
                            Style="{StaticResource button}" Click="Save_Click"
                            Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="NovaTarefa"
                    ></Button>

                <Button Grid.Row="3"
                            Content="Tarefas" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="45" 
                            Width="220"
                            FontFamily="{StaticResource MentoneLig}"
                            Style="{StaticResource PageButton}" Click="TarefaPage_Click">

                </Button>

                <Image Grid.Row="3"
                           Source="/Resources/Images/tarefasicon.png"
                           HorizontalAlignment="Left"
                           Margin="5,5,5,5"
                           Width="25"/>

                <Button Grid.Row="5"
                            Content="Calendário" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Height="45" 
                            Width="200"
                            FontFamily="{StaticResource MentoneLig}"
                            Style="{StaticResource PageButton}" Click="CalendarPage_Click"
                                                                     Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="Calendario">
                </Button>

                <Image Grid.Row="5"
                           Source="/Resources/Images/calendarioicon.png"
                           HorizontalAlignment="Left"
                           Margin="6,5,5,5"
                           Width="25"/>



            </Grid>
        </Grid>

    </Grid>

</UserControl>
