<UserControl x:Class="Remembr.Views.TarefasTerminadas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remembr.Views"
        mc:Ignorable="d"
        d:DesignHeight="600" 
        d:DesignWidth="920"
        Background="Transparent"
        >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Fill="White" 
                            Width="170" 
                            Height="55" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            RadiusX="15" 
                            RadiusY="15"
                            />
            <TextBlock x:Name="Logo"
                            Text="REMEMBR."
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="Black"
                            FontSize="30"
                            FontFamily="{StaticResource NEONLEDLight}" />


            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!--Botao de fechar-->
                <Ellipse x:Name="ButtonClose" Grid.Column="3"
                        Fill="#FF3D3D3D"
                        Height="20"
                        Width="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"  
                        MouseLeftButtonDown="CloseApp_button"
                        Style="{StaticResource Closebutton}"/>

                <!--Botao de minimizar -->
                <Ellipse x:Name="BigButton" Grid.Column="2"
                        Fill="#FF787878"
                        Height="20"
                        Width="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" 
                        MouseLeftButtonDown="BigApp_button"
                        Style="{StaticResource Hidebutton}"/>

                <!--Botao de minimizar -->
                <Ellipse x:Name="HideButton" Grid.Column="1"
                        Fill="#FF787878"
                        Height="20"
                        Width="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" 
                        MouseLeftButtonDown="HideApp_button"
                        Style="{StaticResource Hidebutton}"/>

            </Grid>
        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="1"
                           Fill="#565656"
                           RadiusX="15"
                           RadiusY="15"
                           Margin="10"
                           Opacity="0.8"/>

            <Image Grid.Column="1"
                       x:Name="pastata"
                       Source="/Resources/Images/pastata.png"
                       Margin="20"/>

            <Image Grid.Column="1"
                       x:Name="pastatpi"
                       Source="/Resources/Images/pastatpi.png"
                       Margin="20"/>

            <Image Grid.Column="1"
                       x:Name="pastatee"
                       Source="/Resources/Images/pastatee.png"
                       Margin="20"/>

            <Image Grid.Column="1"
                       x:Name="pastatt"
                       Source="/Resources/Images/pastatt.png"
                       Margin="19"/>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.6*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*"/>
                            <ColumnDefinition Width="5.9*"/>
                            <ColumnDefinition Width="2.1*"/>
                            <ColumnDefinition Width="6.3*"/>
                            <ColumnDefinition Width="1.9*"/>
                            <ColumnDefinition Width="6.3*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="6.5*"/>
                            <ColumnDefinition Width="1.8*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="APAGADAS"
                     x:Name="Botaotarefasta"
                     Grid.Column="7"
                     FontFamily="Mentone"
                     Style="{StaticResource ButtonTarefas}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch" 
                     Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="TarefasApagadas"
             />

                        <Button Content="TERMINADAS"
                     x:Name="Botaotarefastt"
                     Grid.Column="5"
                     FontFamily="Mentone"
                     Style="{StaticResource ButtonTarefas}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="TarefasTerminadas"
                     />

                        <Button Content="EM EXECUÇÃO"
                     x:Name="Botaotarefaste"
                     Grid.Column="3"
                     FontFamily="Mentone"
                     Style="{StaticResource ButtonTarefas}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch" 
                     Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="TarefasExec"
             />

                        <Button Content="POR INICIAR"
                     x:Name="BotaotarefastI"
                     Grid.Column="1"
                     FontFamily="Mentone"
                     Style="{StaticResource ButtonTarefas}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch" 
                     Command="{Binding DataContext.ChangeViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="TarefasPorIniciar"/>

                    </Grid>
                </Grid>

            </Grid>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height=".2*"/>
                    <RowDefinition Height=".5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Ellipse Grid.Row="0"
                             Height="100" 
                             Width="100" 
                             HorizontalAlignment="Center"
                             VerticalAlignment="Bottom"
                             Stroke="#FF3F3F3F" 
                             StrokeThickness="2">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="pfp" ImageSource="/Resources/Images/NoPhoto.png"/>
                    </Ellipse.Fill>
                </Ellipse>

                <Button 
                            Grid.Row="1"
                            Content="Nova Tarefa" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="54" 
                            Width="172"
                            FontFamily="{StaticResource MentoneLig}"
                            Style="{StaticResource button}" Click="Save_Click"/>

                <Button Grid.Row="3"
                            Content="Tarefas" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="45" 
                            Width="220"
                            FontFamily="{StaticResource MentoneLig}"
                            Style="{StaticResource PageButton}" Click="TarefaPage_Click">

                </Button>

                <Image Grid.Row="3"
                           Source="/Resources/Images/tarefasicon.png"
                           HorizontalAlignment="Left"
                           Margin="5,5,5,5"
                           Width="25"/>

                <Button Grid.Row="5"
                            Content="Calendário" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Height="45" 
                            Width="200"
                            FontFamily="{StaticResource MentoneLig}"
                            Style="{StaticResource PageButton}" Click="CalendarPage_Click">
                </Button>

                <Image Grid.Row="5"
                           Source="/Resources/Images/calendarioicon.png"
                           HorizontalAlignment="Left"
                           Margin="6,5,5,5"
                           Width="25"/>



            </Grid>
        </Grid>

    </Grid>

</UserControl>
