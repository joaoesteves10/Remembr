<UserControl x:Class="Remembr.Views.HVLembretes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Remembr.Views"
             xmlns:vm="clr-namespace:Remembr.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="235" d:DesignWidth="643"
             Background="Transparent"
            >

    <UserControl.DataContext>
        <vm:HVLembretesVM/>
    </UserControl.DataContext>

    <Border BorderBrush="#FF3F3F3F" BorderThickness="2" CornerRadius="15" Background="#FFEBEBEB">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBlock
                   TextWrapping="WrapWithOverflow"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   FontFamily="{StaticResource MentoneLig}"
                   Foreground="#FF3F3F3F"
                       FontSize="16"
                       Padding="20"><Run Text="Atenção"/><Run Text=": "/><Run Text="Se a tarefa for prioritária (nível 400 ou acima), os lembretes não poderão ser desligados"/><Run Text=". O "/><Run Text="formato do tempo é dias.horas:minutos:segundos"/><Run Text="."/></TextBlock>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.8*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2.4*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


                <Label Content="ANTECIPAÇÃO"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="18"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <Label Content="Quanto tempo antes?"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="15"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <xctk:TimeSpanUpDown x:Name="tsAntec" Grid.Column="4"
                                     Margin="12"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     BorderThickness="2"
                                     AllowTextInput="True"
                                     FontSize="12"
                                     FontFamily="Mentone"
                                     Foreground="#FF3F3F3F"
                                     Value="0.00:00:00"
                                     Minimum="0.00:00:00"
                                     Maximum="7.00:00:00"/>
                
                <Rectangle Grid.Column="4"
                       Stroke="#FF3F3F3F"
                       StrokeThickness="1.5"
                       RadiusX="6"
                       RadiusY="6"
                       Margin="10"/>

                <StackPanel Grid.Column="2"
                    Height="30"
                    Width="30"
                    Orientation="Horizontal">
                    <Viewbox Height="{Binding Path=ActualHeight, ElementName=StackPanel1}">
                        <CheckBox x:Name="LembreteAntecipacao" 
                                  Background="Transparent"
                                  Foreground="#FF3F3F3F"
                                  BorderBrush="#FF3F3F3F" 
                                  IsChecked="False"
                                  Checked="LembreteAntecipacao_Checked" Unchecked="LembreteAntecipacao_Checked"
                                  Style="{DynamicResource CheckBoxStyle2}"/>
                    </Viewbox>
                </StackPanel>

            </Grid>

            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.8*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2.4*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Label Content="EXECUÇÃO"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="18"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <Label Content="Quanto tempo antes?"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="15"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <xctk:TimeSpanUpDown x:Name="tsExec" Grid.Column="4"
                                     Margin="12"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     BorderThickness="2"
                                     AllowTextInput="True"
                                     FontSize="12"
                                     FontFamily="Mentone"
                                     Foreground="#FF3F3F3F"
                                     Value="0.00:00:00"
                                     Minimum="0.00:00:00"
                                     Maximum="7.00:00:00"/>

                <Rectangle Grid.Column="4"
                       Stroke="#FF3F3F3F"
                       StrokeThickness="1.5"
                       RadiusX="6"
                       RadiusY="6"
                       Margin="10"/>


                <StackPanel Grid.Column="2"
                    Height="30"
                    Width="30"
                    Orientation="Horizontal">
                    <Viewbox Height="{Binding Path=ActualHeight, ElementName=StackPanel1}">
                        <CheckBox x:Name="LembreteExecucao" 
                                  Background="Transparent"
                                  Foreground="#FF3F3F3F"
                                  BorderBrush="#FF3F3F3F" 
                                  IsChecked="False"
                                  Checked="LembreteExecucao_Checked" Unchecked="LembreteExecucao_Checked"
                                  Style="{DynamicResource CheckBoxStyle2}"/>
                    </Viewbox>
                </StackPanel>


            </Grid>




        </Grid>
    </Border>
</UserControl>
