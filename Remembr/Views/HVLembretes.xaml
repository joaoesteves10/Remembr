<UserControl x:Class="Remembr.Views.HVLembretes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Remembr.Views"
             xmlns:vm="clr-namespace:Remembr.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="235" d:DesignWidth="643"
             Background="White"
            >

    <UserControl.DataContext>
        <vm:HVLembretesVM/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Label Content="NOTIFICAÇÕES"
           Grid.Row="1"
           FontFamily="Mentone"
           FontSize="22"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>


        <TextBlock Text="Atenção: Se a tarefa tiver a prioridade 1, os lembretes não poderão ser desligados"
               TextWrapping="WrapWithOverflow"
               Grid.Row="4"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               TextAlignment="Center"
               FontFamily="Mentone"/>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2.4*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>


            <Label Content="ANTECIPAÇÃO"
                   FontFamily="Mentone"
                   FontSize="15"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
            
            <Label Content="Quanto tempo antes?"
                   FontFamily="Mentone"
                   FontSize="15"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <Grid Grid.Column="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>

                <xctk:IntegerUpDown Margin="5 10" 
                                    BorderBrush="{x:Null}"
                                    Grid.Column="1"/>

                <Label Grid.Column="2"
                       Content=":"
                       FontSize="25"
                       FontFamily="Mentone" Margin="1,2,1,12"/>

                <xctk:IntegerUpDown Margin="5 10" 
                                    BorderBrush="{x:Null}"
                                    Grid.Column="3"/>
            </Grid>

            <StackPanel Grid.Column="2"
                    Height="30"
                    Width="30"
                    Orientation="Horizontal">
                <Viewbox Height="{Binding Path=ActualHeight, ElementName=StackPanel1}">
                    <CheckBox x:Name="LembreteAntecipacao" 
                                  Background="Transparent"
                                  Foreground="#FF3F3F3F"
                                  BorderBrush="#FF3F3F3F" Checked="LembreteAntecipacao_Checked"/>
                </Viewbox>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2.4*"/>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Content="EXECUÇÃO"
                   FontFamily="Mentone"
                   FontSize="15"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <Label Content="Quanto tempo antes?"
                   FontFamily="Mentone"
                   FontSize="15"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <Grid Grid.Column="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>

                <xctk:IntegerUpDown Margin="5 10" 
                                    BorderBrush="{x:Null}"
                                    Grid.Column="1"/>

                <Label Grid.Column="2"
                       Content=":"
                       FontSize="25"
                       FontFamily="Mentone" Margin="1,2,1,12"/>

                <xctk:IntegerUpDown Margin="5 10" 
                                    BorderBrush="{x:Null}"
                                    Grid.Column="3"/>
            </Grid>



            <StackPanel Grid.Column="2"
                    Height="30"
                    Width="30"
                    Orientation="Horizontal">
                <Viewbox Height="{Binding Path=ActualHeight, ElementName=StackPanel1}">
                    <CheckBox x:Name="LembreteExecucao" 
                                  Background="Transparent"
                                  Foreground="#FF3F3F3F"
                                  BorderBrush="#FF3F3F3F" Checked="LembreteExecucao_Checked"/>
                </Viewbox>
            </StackPanel>


        </Grid>




    </Grid>

</UserControl>
