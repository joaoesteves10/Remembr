<UserControl x:Class="Remembr.Views.HVLembretes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Remembr.Views"
             xmlns:vm="clr-namespace:Remembr.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="235" d:DesignWidth="643"
             Background="Transparent"
            >

    <UserControl.DataContext>
        <vm:HVLembretesVM/>
    </UserControl.DataContext>

    <Border BorderBrush="#FF3F3F3F" BorderThickness="2" CornerRadius="15" Background="#FFEBEBEB">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="ATIVAR NOTIFICAÇÕES"
               Grid.Row="0"
               FontFamily="{StaticResource MentoneLig}"
               FontSize="22"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Foreground="#FF3F3F3F"/>


            <TextBlock Text="Atenção: Se a tarefa for prioritária ( nível 400 ou acima), os lembretes não poderão ser desligados"
                   TextWrapping="WrapWithOverflow"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   FontFamily="{StaticResource MentoneLig}"
                   Foreground="#FF3F3F3F"/>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.4*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2.4*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


                <Label Content="ANTECIPAÇÃO"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="15"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <Label Content="Quanto tempo antes?"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="15"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <xctk:TimeSpanUpDown Grid.Column="4"
                                     Margin="10"
                                     Background="#FFF3F3F3"
                                     BorderBrush="#FF3F3F3F"
                                     BorderThickness="2"
                                     />

                <StackPanel Grid.Column="2"
                    Height="30"
                    Width="30"
                    Orientation="Horizontal">
                    <Viewbox Height="{Binding Path=ActualHeight, ElementName=StackPanel1}">
                        <CheckBox x:Name="LembreteAntecipacao" 
                                  Background="Transparent"
                                  Foreground="#FF3F3F3F"
                                  BorderBrush="#FF3F3F3F" 
                                  IsChecked="True"
                                  Checked="LembreteAntecipacao_Checked"/>
                    </Viewbox>
                </StackPanel>

            </Grid>

            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.4*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2.4*"/>
                    <ColumnDefinition Width="1.6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Label Content="EXECUÇÃO"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="15"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <Label Content="Quanto tempo antes?"
                   FontFamily="{StaticResource MentoneLig}"
                   FontSize="15"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#FF3F3F3F"/>

                <xctk:TimeSpanUpDown Grid.Column="4"
                                     Margin="10"
                                     Background="#FFF3F3F3"
                                     BorderBrush="#FF3F3F3F"
                                     BorderThickness="2"/>



                <StackPanel Grid.Column="2"
                    Height="30"
                    Width="30"
                    Orientation="Horizontal">
                    <Viewbox Height="{Binding Path=ActualHeight, ElementName=StackPanel1}">
                        <CheckBox x:Name="LembreteExecucao" 
                                  Background="Transparent"
                                  Foreground="#FF3F3F3F"
                                  BorderBrush="#FF3F3F3F" 
                                  IsChecked="True"
                                  Checked="LembreteExecucao_Checked"/>
                    </Viewbox>
                </StackPanel>


            </Grid>




        </Grid>
    </Border>
</UserControl>
