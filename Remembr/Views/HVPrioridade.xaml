<UserControl x:Class="Remembr.Views.HVPrioridade"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Remembr.Views"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="345" 
             Background="#FFD1D1D1">
    <Grid>

        <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">

            <Button x:Name="Prioridade1"
                        Content="Prioridade 1"
                        FontFamily="Mentone"
                        Style="{StaticResource NTbutton}"
                        Height="40"
                        Width="300"
                        Margin="0 5 0 5" Background="#FFAFF46E"/>

            <Button x:Name="Prioridade2"
                        Content="Prioridade 2"
                        FontFamily="Mentone"
                        Style="{StaticResource NTbutton}"
                        Height="40"
                        Width="300"
                        Margin="0 5 0 5" Background="#FFF7FF5E"/>

            <Button x:Name="Prioridade3"
                        Content="Prioridade 3"
                        FontFamily="Mentone"
                        Style="{StaticResource NTbutton}"
                        Height="40"
                        Width="300"
                        Margin="0 5 0 5" Background="#FFFFBB3D"/>

            <Button x:Name="Prioridade4"
                        Content="Prioridade 4"
                        FontFamily="Mentone"
                        Style="{StaticResource NTbutton}"
                        Height="40"
                        Width="300"
                        Margin="0 5 0 5" Background="#FFFF6060"/>

            <Button x:Name="Prioridadex"
                        Content="Adicionar Nova Prioridade"
                        FontFamily="Mentone"
                        Style="{StaticResource NTbutton}"
                        Height="40"
                        Width="300"
                        Margin="0 5 0 5"/>


        </StackPanel>
    </Grid>
</UserControl>
